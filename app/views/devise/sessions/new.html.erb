<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="text-center mb-4">ログイン</h2>

          <%= form_with model: resource, url: session_path(resource_name), local: true, class: "needs-validation" do |f| %>
            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "パスワード", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="text-center mb-3">
              <%= f.submit "ログイン", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="text-center mb-3">
            <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "btn btn-link" %><br>
            <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "btn btn-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
