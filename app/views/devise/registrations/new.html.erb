<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="text-center mb-4">新規登録</h2>

          <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% resource.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
            <div class="mb-3">
              <%= f.label :nickname, "ニックネーム", class: "form-label" %>
              <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム",
                               class: "form-control #{'is-invalid' if resource.errors[:nickname].present?}" %>
              <% if resource.errors[:nickname].present? %>
                <div class="invalid-feedback">
                  <%= resource.errors[:nickname].first %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス",
                                class: "form-control #{'is-invalid' if resource.errors[:email].present?}" %>
              <% if resource.errors[:email].present? %>
                <div class="invalid-feedback">
                  <%= resource.errors[:email].first %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "パスワード（６文字以上）", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード",
                                   class: "form-control #{'is-invalid' if resource.errors[:password].present?}" %>
              <% if resource.errors[:password].present? %>
                <div class="invalid-feedback">
                  <%= resource.errors[:password].first %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "パスワード（確認用）", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）",
                                   class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].present?}" %>
              <% if resource.errors[:password_confirmation].present? %>
                <div class="invalid-feedback">
                  <%= resource.errors[:password_confirmation].first %>
                </div>
              <% end %>
            </div>

            <div class="d-grid">
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
          <% end %>

          <div class="text-center">
            <%= link_to "すでにアカウントをお持ちの方はこちら", new_session_path(resource_name), class: "btn btn-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
