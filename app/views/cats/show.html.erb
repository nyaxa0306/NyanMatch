<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title mb-4 d-flex align-items-center">
        <%= @cat.name %>
        <!-- 募集ステータス -->
        <% if @cat.status.present? %>
          <% badge_class = case @cat.status
            when "募集中" then "bg-success"
            when "トライアル中" then "bg-warning text-dark"
            when "譲渡済み" then "bg-secondary"
          end %>
          <span class="badge ms-3 <%= badge_class %>">
            <%= @cat.status %>
          </span>
        <% end %>
        <!-- お気に入り -->
        <% if user_signed_in? %>
          <% if current_user.favorite_cats.exists?(@cat.id) %>
            <%= button_to "★ お気に入り解除", cat_favorite_path(@cat), method: :delete, class: "btn btn-warning ms-3" %>
          <% else %>
            <%= button_to "☆ お気に入り", cat_favorite_path(@cat), method: :post, class: "btn btn-outline-warning ms-3" %>
          <% end %>
        <% end %>
      </h2>

      <div class="text-center mb-4">
        <%= image_tag @cat.display_image(width: 500, height: 500), class: "rounded" %>
      </div>
      <ul class="list-group list-group-flush mb-4">
        <li class="list-group-item"><strong>年齢:</strong> <%= @cat.age %> 歳</li>
        <li class="list-group-item"><strong>性別:</strong> <%= @cat.gender == "male" ? "オス" : "メス" %></li>
        <li class="list-group-item"><strong>地域:</strong> <%= @cat.prefecture.name %></li>
        <li class="list-group-item"><strong>種類:</strong> <%= @cat.breed %></li>
        <li class="list-group-item"><strong>性格:</strong> <%= @cat.personality %></li>
        <li class="list-group-item"><strong>健康状態:</strong> <%= @cat.helth %></li>
        <li class="list-group-item"><strong>投稿者:</strong> 
          <%= link_to @cat.user.nickname, user_path(@cat.user), class: "text-decoration-none" if @cat.user %>
        </li>
      </ul>

      <% if current_user == @cat.user %>
        <!-- 投稿者のみ表示 -->
        <div class="d-flex gap-2">
          <%= link_to "編集", edit_cat_path(@cat), class: "btn btn-primary" %>
          <%= link_to "削除", cat_path(@cat), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
        </div>
      <% else %>
          <!-- 投稿者以外表示 -->
        <%= form_with model: Application.new, url: applications_path do |f| %>
          <%= f.hidden_field :cat_id, value: @cat.id %>

          <div class="mb-3">
            <%= f.label :message, "応募メッセージ" %>
            <%= f.text_area :message, rows: 4, class: "form-control" %>
          </div>

          <% if user_signed_in? %>
            <%= f.submit "応募する", class: "btn btn-primary" %>
          <% else %>
            <%= link_to "ログインして応募", new_user_session_path, class: "btn btn-primary" %>
          <% end %>
        <% end %>
      <% end %>

      <div class="mt-4">
        <%= link_to "一覧に戻る", cats_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>

