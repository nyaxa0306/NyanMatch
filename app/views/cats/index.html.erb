<div class="container mt-4">
  <h2 class="mb-4 text-center">猫ちゃん一覧</h2>

  <!-- 検索フォーム -->
  <div class="mb-4">
    <%= form_with url: cats_path, method: :get, local: true, class: "d-flex justify-content-center gap-2" do %>
      <!-- フリーワード -->
      <%= text_field_tag :keyword, params[:keyword], placeholder: "名前、種類、性格など", class: "form-control w-auto" %>
      <!-- 地域 -->
      <%= select_tag :prefecture_id, options_from_collection_for_select(Prefecture.all, :id, :name, params[:prefecture_id]), include_blank: "全ての地域", class: "form-select w-auto" %>
      <!-- 性別 -->
      <%= select_tag :gender, options_for_select([["すべて", ""], ["オス", "male"], ["メス", "female"]], params[:gender]), class: "form-select w-auto" %>
      <!-- 募集ステータス -->
      <%= select_tag :status, options_for_select([["すべて", ""], ["募集中", "募集中"], ["トライアル中", "トライアル中"], ["譲渡済み", "譲渡済み"]], params[:status]), class: "form-select w-auto" %>
      <%= submit_tag "検索", class: "btn btn-primary w-auto" %>
      <%= link_to "リセット", cats_path, class: "btn btn-outline-secondary w-auto" %>
    <% end %>
  </div>

  <!-- 件数表示 -->
  <% if @cats.any? %>
    <p class="text-muted"><%= @cats.count %> 件の猫ちゃんが見付かりました</p>
  <% else %>
    <p class="text-muted">猫ちゃんが見つかりませんでした</p>
  <% end %>

  <div class="row">
    <% @cats.each do |cat| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <%= image_tag cat.display_image(width: 400, height: 300), class: "card-img-top rounded", style: "object-fit: contain; width: 100%; height: 200px; background-color: #f8f9fa;" %>
          <div class="card-body">
            <h5 class="card-title d-flex align-items-center">
              <%= cat.name %>
              <!-- 募集ステータス -->
              <% status = cat.status || "募集中" %>
              <% badge_class = case status
                when "募集中" then "bg-success"
                when "トライアル中" then "bg-warning text-dark"
                when "譲渡済み" then "bg-secondary"
              end %>
              <span class="badge ms-2 <%= badge_class %>">
                <%= status %>
              </span>
              <!-- お気に入り -->
              <% if user_signed_in? && current_user.favorite_cats.exists?(cat.id) %>
                <span class="badge bg-warning text-dark ms-2">★</span>
              <% end %>
            </h5>
            <!-- 基本情報 -->
            <ul class="list-group list-group-flush mb-4">
              <li class="list-group-item"><strong>年齢:</strong> <%= cat.age %> 歳</li>
              <li class="list-group-item"><strong>性別:</strong> <%= cat.gender == "male" ? "オス" : "メス" %></li>
              <li class="list-group-item"><strong>地域:</strong> <%= cat.prefecture.name %></li>
            </ul>

            <%= link_to "詳細を見る", cat_path(cat), class: "btn btn-outline-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

