<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h3 class="text-center mb-4">プロフィール編集</h3>

          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :nickname, "ニックネーム", class: "form-label" %>
              <%= f.text_field :nickname, class: "form-control #{'is-invalid' if @user.errors[:nickname].any?}" %>
              <% if @user.errors[:nickname].any? %>
                <div class="invalid-feedback">
                  <%= @user.errors[:nickname].first %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :role, "ユーザー区分", class: "form-label" %>
              <%= f.select :role, [["里親希望さん", "adopter"], ["保護主さん", "protector"]], {}, class: "form-select" %>
            </div>

            <div class="mb-3">
              <%= f.label :introduction, "自己紹介", class: "form-label" %>
              <%= f.text_area :introduction, rows: 4, placeholder: "自己紹介を入力してください", class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= f.submit "更新する", class: "btn btn-success" %>
            </div>
          <% end %>

          <div class="text-center mt-3">
            <%= link_to "戻る", user_path(@user), class: "btn btn-link" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
